@model User;

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
@if (TempData["AlertMessage"] != null)
{
    <script>
        alert("@TempData["AlertMessage"]");
    </script>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-primary">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Login</h1>

                    <form method="post" asp-action="Verify">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input required asp-for="Email" type="email" class="form-control" id="Email" placeholder="Enter your email">
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input required asp-for="PasswordHash" class="form-control" type="password" id="Password" placeholder="Enter your password">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-3">
        &reg; Don't you have an account? <a asp-area="" asp-controller="User" asp-action="SignUp">Register here</a>
    </div>
</div>