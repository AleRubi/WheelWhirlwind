@inject ApplicationDbContext context;
@model List<VehicleListing>;

@{
    ViewData["Title"] = "Search";
}

<div class="text-center">
    <h3>Vehicle announcements</h3>
</div>


<div class="row">
    <div class="col-4">
    <h2>Filters</h2>
        <form id="filter-form">
            <div class="form-group">
                <label for="brand">Brand:</label>
                <select class="form-control" id="brand" name="brand">
                    <option value="">Select Brand</option>
                    @foreach (var Brand in context.Vehicles.Select(v => v.Brand).Distinct()){
                        <option value="@Brand">@Brand</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="model">Model:</label>
                <select class="form-control" id="model" name="model">
                    <option value="">Select Model</option>
                    @foreach (var Model in context.Vehicles.Select(v => v.Model).Distinct()){
                        <option value="@Model">@Model</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="fuel">Fuel:</label>
                <select class="form-control" id="fuel" name="fuel">
                    <option value="">Select Fuel</option>
                    @foreach (var Fuel in context.Vehicles.Select(v => v.Fuel).Distinct()){
                        <option value="@Fuel">@Fuel</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="emissions">Emissions:</label>
                <select class="form-control" id="emissions" name="emissions">
                    <option value="">Select Emissions</option>
                    @foreach (var Emissions in context.Vehicles.Select(v => v.Emissions).Distinct()){
                        <option value="@Emissions">@Emissions</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="location">Location:</label>
                <select class="form-control" id="location" name="location">
                    <option value="">Select Location</option>
                    @foreach (var Location in context.Vehicles.Select(v => v.Location).Distinct()){
                        <option value="@Location">@Location</option>
                    }
                </select>
            </div>

            <button type="button" class="btn btn-primary" onclick="applyFilters()">Apply Filters</button>
        </form>
    </div>




    <div class="col-7">
        @{var pageSize = 3; // Number of listings per page
            var totalListings = context.VehicleListings.Count();
            var totalPages = (int)Math.Ceiling((double)totalListings / pageSize);
            int currentPage = ViewBag.Page != null ? (int)ViewBag.Page : 1;

            var listings = context.VehicleListings.Skip((currentPage - 1) * pageSize).Take(pageSize);
        }

        @{foreach(var item in Model){
            <a asp-action="Announcement" asp-controller="Vehicle" class="text-decoration-none" asp-route-id="@item.VehicleId">
                <div class="card mb-3 mx-auto" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            @{foreach(var ogg in context.VehicleImages){
                                if(ogg.VehicleId == item.VehicleId){
                                    <img src="~/Images/@ogg.Path" class="img-fluid rounded-start" alt="">
                                    break;
                                }
                            }}
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                @{foreach(var ogg in context.Vehicles){
                                    if(ogg.VehicleId == item.VehicleId){
                                        <h5 class="card-title">@ogg.Title</h5>
                                        <p class="card-text">@ogg.Description<br>@ogg.Price€</p>
                                        <p class="card-text"><small class="text-muted">@ogg.RegistrationMonth/@ogg.RegistrationYear &nbsp; @ogg.Mileage km &nbsp; @ogg.Fuel &nbsp; @ogg.Transmission </small></p>
                                        
                                        break;
                                    }
                                }}
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= totalPages; i++){
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Search", new { page = i })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>


<script>
    function updateSliderValue(value, outputId) {
        document.getElementById(outputId).innerText = value;
    }
</script>
<script>
    // Initialize Bootstrap Slider for price range
    $("#price-slider").slider({
        tooltip: 'always',
        formatter: function(value) {
            return '€' + value;
        }
    }).on('slide', function(slideEvt) {
        var range = slideEvt.value;
        $('#price-output').text('€' + range[0] + ' - €' + range[1]);
    });
</script>
